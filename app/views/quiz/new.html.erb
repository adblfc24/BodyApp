<h1>Add a new URL</h1>
<%= form_for @shortened_url do |form| %>
 
  <p>
    <%= form.label :quizzes, "Your URL:" %>
    <%= form.text_field :quizzes %>
  </p>
 
  <% if @shortened_url.errors[:quiz].any? %>
    <p class='error-messages'>
      The given url <%= @shortened_url.errors[:quiz].to_sentence %>.
    </p>
  <% end %>
 
  <p class='buttons'>
    <%= form.submit "Shorten my URL" %>
  </p>
 
<% end %>